{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    "types": ["cypress", "node", "cypress-file-upload", "cypress-axe"],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"],
      "@/components/*": ["../src/components/*"],
      "@/utils/*": ["../src/utils/*"],
      "@/lib/*": ["../src/lib/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../src/**/*"
  ],
  "exclude": [
    "../node_modules",
    "../.next",
    "../dist"
  ]
} 